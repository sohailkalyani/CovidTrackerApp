<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="12dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="7dp"
        android:layout_marginHorizontal="12dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sno"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="123"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:textSize="15dp"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"></TextView>

        <ImageView
            android:id="@+id/countryImage"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_toEndOf="@id/sno"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/sno"></ImageView>

        <TextView
            android:id="@+id/countryName"
            android:layout_width="82dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toEndOf="@id/countryImage"
            android:layout_toRightOf="@id/countryImage"
            android:fontFamily="sans-serif-medium"
            android:text="INDIA"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/countryCases"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/countryName"
            android:fontFamily="sans-serif-medium"
            android:text="342425"
            android:textColor="@color/black"></TextView>



    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>